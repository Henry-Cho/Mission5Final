@{
    ViewData["Title"] = "NewMovie";
}

@model Mission5.Models.ApplicationResponse

<div>Add New Movies</div>

<form method="post" class="form-group">
    <label asp-for="Category">Category</label>
    <select asp-for="Categoryid" class="form-control">
        <option value="">Select a category</option>
        @foreach (Category m in ViewBag.Categories)
        {
            <option value="@m.CategoryId">@m.CategoryName</option>
        }
    </select>
    <br />
    <label asp-for="Title">Title</label>
    <input asp-for="Title" class="form-control"/>
    <br />
    <label asp-for="Year">Year</label>
    <input asp-for="Year" class="form-control"/>
    <br />
    <label asp-for="Director">Director</label>
    <input asp-for="Director" class="form-control"/>
    <br />
    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating" class="form-control">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <label asp-for="Edited">Edited</label>
    <select asp-for="Edited" class="form-control">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label asp-for="LentTo">Lent To</label>
    <input asp-for="LentTo" class="form-control"/>
    <br />
    <label asp-for="Note">Notes</label>
    <input asp-for="Note" class="form-control"/>
    <br />
    <button id="btn" type="submit">Save</button>
    <div asp-validation-summary="All;"></div>
    @if (ViewBag.New == false)
    {
        <input type="hidden" asp-for="MovieId" />
    }

</form>