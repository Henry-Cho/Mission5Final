@{
    ViewData["Title"] = "The Joel Hilton Film Collection";
}

@model List<ApplicationResponse>

<div>This is Homepage</div>
<img src="~/img/JoelHiltonHeadshot.jpg" height="400" />

<br />
<h1>Joel's Movie List!</h1>
<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>LentTo</td>
            <td>Note</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.Category.CategoryName</td>
            <td>@x.Title</td>
            <td>@x.Year</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>
            <td>@x.Edited</td>
            <td>@x.LentTo</td>
            <td>@x.Note</td>
            @* To edit and delete a record, used a recordID (MovieID) *@
            <td><a asp-controller="Home" asp-action="Edit" asp-route-recordId="@x.MovieId">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-recordId="@x.MovieId">Delete</a></td>
        </tr>

        }
    </tbody>
</table>
